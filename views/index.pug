doctype html
html(lang="en")
	include includes/head.pug
	body
		section.hero.is-full-height
			.hero-head
				//- include includes/nav.pug
			.hero-body
				.container.has-text-centered
					h1.title.is-1(style="padding-top: 1rem;") Distance Learning Schedule Maker
			.hero-foot
		article.article
			include includes/body.pug
			.columns
				.column.is-three-quarters#mainColumn
					#startScreen
						+section()
							button.button#showMakeScheduleScreen Make My Schedule!
					#makeScheduleScreen.is-hidden
						+section()
							button.button.is-success Auto Sign-in to Punahou
							p.spacer
							p Or manually enter your schedule information below:
							//- TODO: need to validate form cuz i need all fields filled out! make sure nothing overlapping etc.
							#SchedFormCourses
								.oneCourseGroupBlank.oneCourseGroup.box.is-hidden
									.container(style="padding-right: 1rem;").has-text-right: a.deleteCourseBtn: +icon("fa-times")
									.field
										label.label Class Name
										.control
											input.input.courseName(type="text", placeholder="i.e. English IV")
									.columns
										.column
											.field
												label.label Subject
												.control
													.select
														select.courseSubjectDropdown
															option Select dropdown
															option languageed
															option mathhd
										.column
											.field
												label.label Class Start Time
												.control
													.select
														select.courseStartTimeDropdown
															option Select dropdown
															option 7:30
															option 8:00
												p.help Use regular school time, aka before Spring Break
											.field
												label.label Class End Time
												.control
													.select
														select.courseEndTimeDropdown
															option Select dropdown
															option 7:30
															option 8:00
												p.help Use regular school time, aka before Spring Break
								p.spacer
								.field
									button.button.is-outlined#addCourseBtn
										+icon("fa-plus")
										span Add Class
							p.spacer
							//- center align this form below
							form.form#makeScheduleForm
								.field.is-grouped.is-grouped-centered
									.control
										button.button.is-link Do Magic!

				.column#rightSidebar

		//- Footer
		include includes/footer.pug
