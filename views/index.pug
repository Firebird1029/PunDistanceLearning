doctype html
html(lang="en")
	include includes/head.pug
	body
		section.hero.is-full-height
			.hero-head
				//- include includes/nav.pug
			.hero-body
				.container.has-text-centered
					h1.title.is-1(style="padding-top: 1rem;") Distance Learning Schedule Maker
			.hero-foot
		article.article
			include includes/body.pug
			.columns
				.column.is-three-quarters#mainColumn
					#startScreen
						+section()
							button.button#showMakeScheduleScreen Make My Schedule!
					#makeScheduleScreen.is-hidden
						+section()
							button#autoSignIn.button.is-success Auto Sign-in to Punahou
							input#username(type="text", placeholder="jdoe20")
							input#password(type="password")
							p.spacer
							p Or manually enter your schedule information below:
							#SchedFormCourses
								.oneCourseGroupBlank.oneCourseGroup.box.is-hidden
									.container(style="padding-right: 1rem;").has-text-right: a.deleteCourseBtn: +icon("fa-times")
									.field
										label.label Class Name
										.control
											input.input.courseName(type="text", placeholder="i.e. English IV")
									.columns
										.column
											.field
												label.label Subject
												.control
													.select
														select.courseSubjectDropdown
															option Select:
															option World Languages
															option Art
															option Social Studies
															option DT (Design Technology)
															option Math
															option Music
															option S+Well
															option Theatre
															option English
															option PE
															option Science
															option JROTC
										.column
											.field
												label.label Class Regular Start Time
												.control
													.select
														select.courseStartTimeDropdown
															option Select:
															option 7:30 AM
															option 8:00 AM
															option 8:30 AM
															option 9:00 AM
															option 9:30 AM
															option 10:00 AM
															option 10:30 AM
															option 11:00 AM
															option 11:30 AM
															option 12:00 PM
															option 12:30 PM
															option 1:00 PM
															option 1:30 PM
															option 2:00 PM
															option 2:30 PM
															option 3:00 PM
															option 3:30 PM
												p.help Use regular school time, aka before Spring Break
											.field
												label.label Class Regular End Time
												.control
													.select
														select.courseEndTimeDropdown
															option Select:
															option 7:30 AM
															option 8:00 AM
															option 8:30 AM
															option 9:00 AM
															option 9:30 AM
															option 10:00 AM
															option 10:30 AM
															option 11:00 AM
															option 11:30 AM
															option 12:00 PM
															option 12:30 PM
															option 1:00 PM
															option 1:30 PM
															option 2:00 PM
															option 2:30 PM
															option 3:00 PM
															option 3:30 PM
												p.help Use regular school time, aka before Spring Break
								p.spacer
								.field
									button.button.is-outlined#addCourseBtn
										+icon("fa-plus")
										span Add Class
							p.spacer
							//- center align this form below
							form.form#makeScheduleForm
								.field.is-grouped.is-grouped-centered
									.control
										button.button.is-link Do Magic!
					#tableScreen.is-hidden
						section.section
							//- .container.has-text-right.content
							//- 	a(onclick="window.location.reload()"): span.icon: i.fas.fa-sync-alt
							.container.has-text-justified.content
								table.table#scheduleTable
									thead
										tr
											th Time
											th(style="text-align: center;") A
											th(style="text-align: center;") B
											th(style="text-align: center;") C
											th(style="text-align: center;") D
											th(style="text-align: center;") E
											th(style="text-align: center;") F
									tbody
										- var i=1
										- var DLmodTimeConversion = {1: "9:00", 2: "9:10", 3: "9:20", 4: "9:30", 5: "9:40", 6: "9:50", 7: "10:00", 8: "10:10", 9: "10:20", 10: "10:30", 11: "10:40", 12: "10:50", 13: "11:00", 14: "11:10", 15: "11:20", 16: "11:30", 17: "11:40", 18: "11:50", 19: "12:00", 20: "12:10", 21: "12:20", 22: "12:30", 23: "12:40", 24: "12:50", 25: "1:00", 26: "1:10", 27: "1:20", 28: "1:30", 29: "1:40", 30: "1:50", 31: "2:00", 32: "2:10", 33: "2:20"};
										while i <= 32
											tr
												th.schedModTimeHeader= DLmodTimeConversion[i]
												td.schedMod.is-unselectable.aCol(class=["mod" + i])
												td.schedMod.is-unselectable.bCol(class=["mod" + i])
												td.schedMod.is-unselectable.cCol(class=["mod" + i])
												td.schedMod.is-unselectable.dCol(class=["mod" + i])
												td.schedMod.is-unselectable.eCol(class=["mod" + i])
												td.schedMod.is-unselectable.fCol(class=["mod" + i])
												- i++
				.column#rightSidebar

		//- Footer
		include includes/footer.pug
