doctype html
html(lang="en")
	include includes/head.pug
	body
		section.hero.is-full-height
			.hero-head
				//- include includes/nav.pug
			.hero-body
				.container.has-text-centered
					h1.title.is-1(style="padding-top: 1rem;") Distance Learning Schedule Maker
			.hero-foot
		article.article
			include includes/body.pug
			.columns
				.column.is-three-quarters#mainColumn
					#startScreen
						+section()
							button.button#showMakeScheduleScreen Make My Schedule!
					#makeScheduleScreen.is-hidden
						+section()
							button.button.is-success Auto Sign-in to Punahou
							p.spacer
							p Or manually enter your schedule information below:
							#SchedFormCourses
								.oneCourseGroupBlank.oneCourseGroup.box.is-hidden
									.container(style="padding-right: 1rem;").has-text-right: a.deleteCourseBtn: +icon("fa-times")
									.field
										label.label Class Name
										.control
											input.input.courseName(type="text", placeholder="i.e. English IV")
									.columns
										.column
											.field
												label.label Subject
												.control
													.select
														select.courseSubjectDropdown
															option Select:
															option World Languages
															option Art
															option Social Studies
															option DT (Design Technology)
															option Math
															option Music
															option S+Well
															option Theatre
															option English
															option PE
															option Science
															option JROTC
										.column
											.field
												label.label Class Regular Start Time
												.control
													.select
														select.courseStartTimeDropdown
															option Select:
															option 7:30 AM
															option 8:00 AM
															option 8:30 AM
															option 9:00 AM
															option 9:30 AM
															option 10:00 AM
															option 10:30 AM
															option 11:00 AM
															option 11:30 AM
															option 12:00 PM
															option 12:30 PM
															option 1:00 PM
															option 1:30 PM
															option 2:00 PM
															option 2:30 PM
															option 3:00 PM
															option 3:30 PM
												p.help Use regular school time, aka before Spring Break
											.field
												label.label Class Regular End Time
												.control
													.select
														select.courseEndTimeDropdown
															option Select:
															option 7:30 AM
															option 8:00 AM
															option 8:30 AM
															option 9:00 AM
															option 9:30 AM
															option 10:00 AM
															option 10:30 AM
															option 11:00 AM
															option 11:30 AM
															option 12:00 PM
															option 12:30 PM
															option 1:00 PM
															option 1:30 PM
															option 2:00 PM
															option 2:30 PM
															option 3:00 PM
															option 3:30 PM
												p.help Use regular school time, aka before Spring Break
								p.spacer
								.field
									button.button.is-outlined#addCourseBtn
										+icon("fa-plus")
										span Add Class
							p.spacer
							//- center align this form below
							form.form#makeScheduleForm
								.field.is-grouped.is-grouped-centered
									.control
										button.button.is-link Do Magic!
					#tableScreen.is-hidden
						section.section
							//- .container.has-text-right.content
							//- 	a(onclick="window.location.reload()"): span.icon: i.fas.fa-sync-alt
							.container.has-text-justified.content
								table.table#scheduleTable
									thead
										tr
											th Time
											th(style="text-align: center;") A
											th(style="text-align: center;") B
											th(style="text-align: center;") C
											th(style="text-align: center;") D
											th(style="text-align: center;") E
											th(style="text-align: center;") F
									tbody
										- var i=1
										- var modTimeConversion = {1: "7:30", 2: "7:45", 3: "8:00", 4: "8:15", 5: "8:30", 6: "8:45", 7: "9:00", 8: "9:15", 9: "9:30", 10: "9:45", 11: "10:00", 12: "10:15", 13: "10:30", 14: "10:45", 15: "11:00", 16: "11:15", 17: "11:30", 18: "11:45", 19: "12:00", 20: "12:15", 21: "12:30", 22: "12:45", 23: "1:00", 24: "1:15", 25: "1:30", 26: "1:45", 27: "2:00", 28: "2:15", 29: "2:30", 30: "2:45", 31: "3:00", 32: "3:15", 33: "3:30"}
										while i <= 32
											tr
												th.schedModTimeHeader(class={"is-hidden": (i % 2) === 0})= modTimeConversion[i]
												td.schedMod.is-unselectable.aCol(class=["mod" + i] class={"is-hidden": (i % 2) === 0})
												td.schedMod.is-unselectable.bCol(class=["mod" + i] class={"is-hidden": (i % 2) === 0})
												td.schedMod.is-unselectable.cCol(class=["mod" + i] class={"is-hidden": (i % 2) === 0})
												td.schedMod.is-unselectable.dCol(class=["mod" + i] class={"is-hidden": (i % 2) === 0})
												td.schedMod.is-unselectable.eCol(class=["mod" + i] class={"is-hidden": (i % 2) === 0})
												td.schedMod.is-unselectable.fCol(class=["mod" + i] class={"is-hidden": (i % 2) === 0})
												- i++
				.column#rightSidebar

		//- Footer
		include includes/footer.pug
